public class MySQLUtilitiesTest  {


	String firstColumn = "MelABCD";
	String secondColumn = "Mel is the best";
	MySQLUtilities sql = null;
	
	@Before
	public void setUp()
	{
		try {
			this.sql = new MySQLUtilities("jdbc:mysql://ccl5zwj6cgtotm.c6af5bvxbhrs.us-east-1.rds.amazonaws.com:3306/CSE480", "cse480username", "fuckyoubitch");

import static org.junit.Assert.*;

import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.HashMap;

import org.junit.Test;

public class MySQLUtilitiesTest {


	String firstColumn = "MelABC";
	String secondColumn = "Mel is the best";
	@Test
	public void testSelectSQL()
	{
		try {
			MySQLUtilities sql = new MySQLUtilities("jdbc:mysql://ccl5zwj6cgtotm.c6af5bvxbhrs.us-east-1.rds.amazonaws.com:3306/CSE480", "cse480username", "fuckyoubitch");
			HashMap<String, String> theMap2 = new HashMap<String,String>();
	    	theMap2.put("melcolumn1", firstColumn);
	    	theMap2.put("melcolumn2", secondColumn);
	    	sql.InsertSQL("Mel", theMap2);
	    	
	    	ResultSet rs1 = sql.SelectSQL("SELECT * From Mel WHERE melcolumn1 = 'Mel10'");
	    	while (rs1.next())
	        {
	    		assertEquals(rs1.getString(1), firstColumn);
	    		assertEquals(rs1.getString(2), secondColumn);
	        }
		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			fail("Failed");
			e.printStackTrace();
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			fail("Failed");
			e.printStackTrace();
		}
	}
	
	
	@Test
	public void testInsertSQL()
	{
		try {
			MySQLUtilities sql = new MySQLUtilities("jdbc:mysql://ccl5zwj6cgtotm.c6af5bvxbhrs.us-east-1.rds.amazonaws.com:3306/CSE480", "cse480username", "fuckyoubitch");
			HashMap<String, String> theMap2 = new HashMap<String,String>();
	    	theMap2.put("melcolumn1", firstColumn);
	    	theMap2.put("melcolumn2", secondColumn);
	    	sql.InsertSQL("Mel", theMap2);
	    	
	    	ResultSet rs1 = sql.SelectSQL("SELECT * From Mel WHERE melcolumn1 = " + sql.SQLFormat(firstColumn));
	    	while (rs1.next())
	        {
	    		assertEquals(rs1.getString(1), firstColumn);
	    		assertEquals(rs1.getString(2), secondColumn);
	        }
		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			fail("Failed");
			e.printStackTrace();
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			fail("Failed");
			e.printStackTrace();
		}

	}

}

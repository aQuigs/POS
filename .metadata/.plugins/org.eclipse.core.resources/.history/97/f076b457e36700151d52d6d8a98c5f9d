import static org.junit.Assert.*;

import org.junit.Test;

public class TestStringUtilities {
	StringUtilities su = new StringUtilities();
	@Test
	public void testDoesItContainCertainWord() {
		assertTrue(su.DoesItContainCertainWord(" Drop ", "DROP TABLE WHERE"));
	}
	
	@Test
	public void testReplaceDoubleQuotes(){
		assertEquals(su.ReplaceDoubleQuotes("HELLO\"\""), "HELLO\"\"\"\"");
	}
	
	@Test
	public void testReplaceSingleQuotes(){
		assertEquals(su.ReplaceSingleQuotes("HELLO''"), "HELLO''''");
	}
	
	@Test
	public void testNumbersOnly(){
		assertEquals(su.NumbersOnly("1A2B3C"), "123");
	}
	
	@Test
	public void testNumbersAndLettersOnly(){
		assertEquals(su.NumbersAndLettersOnly("HELLO*,.?'312"), "HELLO312");
	}
	
	@Test
	public void testCountStringOccurrences(){
		assertEquals(su.CountStringOccurrences("MELMELMEL", "MEL"), 3);
	}
	
	@Test
	public void testToSQLSingleQuoteStringOrNull(){
		System.out.println(su.ToSQLSingleQuoteStringOrNull("  ");
		//assertEquals(su.ToSQLSingleQuoteStringOrNull("  "), "NULL");
		assertEquals(su.ToSQLSingleQuoteStringOrNull("'Mel'"), "'''Mel'''");
				
	}
	

}
